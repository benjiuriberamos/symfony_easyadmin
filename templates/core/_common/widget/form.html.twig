{% macro tabs(blocks) %}
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" role="tablist">
                {% for row in blocks %}
                    <li class="nav-item">
                        <a class="tab-item nav-link {{ loop.index == 1 ? 'active' }}" id="form-{{ loop.index }}" data-toggle="tab" href="#tab-{{ loop.index }}" role="tab" aria-selected="true">{{ row.title }}</a>
                    </li>
                {% endfor %}
            </ul>
            <div class="tab-content">
                {% for row in blocks %}
                    <div class="tab-pane fade {{ loop.index == 1 ? 'show active' }}" id="tab-{{ loop.index }}" role="tabpanel">
                        <div class="row">
                            <div class="col-12">
                                {% if row.cards is defined %}
                                    {% for item in row.cards %}
                                        <div class="card">
                                            {% if item.title is defined and item.title %}
                                                <div class="card-header">
                                                    <h4>{{ item.title }}</h4>
                                                </div>
                                            {% endif %}
                                            <div class="card-body">
                                                {{ item.content }}
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <div class="card">
                                        <div class="card-body">
                                            {{ row.content }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}

{% macro cards(blocks) %}
    {% for row in blocks %}
        <div class="card">
            {% if row.title is defined and row.title %}
                <div class="card-header">
                    <h4>{{ row.title }}</h4>
                </div>
            {% endif %}
            <div class="card-body">
                {{ row.content }}
            </div>
        </div>
    {% endfor %}
{% endmacro %}
