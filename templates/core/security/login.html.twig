<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Login | {{ get_parameter('app_name') }}</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="{{ asset('sd_admin/plugins/fontawesome-free/css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('sd_admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}">

    <!-- CSS Libraries -->

    <!-- Template CSS -->
    <link rel="stylesheet" href="{{ asset('sd_admin/css/adminlte.min.css') }}">
    <link rel="stylesheet" href="{{ asset('sd_admin/css/custom/login.css') }}">
</head>

<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <img src="{{ asset(get_parameter('logo_max', 'sd_admin/img/logo_max.svg')) }}" alt="{{ get_parameter('app_name') }}" class="shadow-light">
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <form method="POST" class="sd-needs-validation" novalidate>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="email">Email</label>
                    <div class="input-group mb-3">
                        <input id="email" type="email" class="form-control" name="email" tabindex="1" value="{{ last_username }}" required autofocus autocomplete="off">
                        <div class="invalid-feedback">
                            Ingrese su email
                        </div>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="d-block">
                        <label for="password" class="control-label">Contraseña</label>
                        <div class="float-right">
                            <a href="{{ path('app_forgot_password_request') }}" class="text-small">
                                Olvidaste tu contraseña?
                            </a>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input id="password" type="password" class="form-control" name="password" tabindex="2" required>
                        <div class="invalid-feedback">
                            Ingrese su contraseña
                        </div>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="icheck-primary">
                            <input type="checkbox" name="_remember_me" tabindex="3" id="_remember_me">
                            <label for="_remember_me">Recuérdame</label>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="row mb-3">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- General JS Scripts -->
<script src="{{ asset('sd_admin/plugins/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('sd_admin/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
<script src="{{ asset('sd_admin/js/custom/validation.js') }}"></script>

<!-- JS Libraies -->

<!-- Template JS File -->
<script src="{{ asset('sd_admin/js/adminlte.min.js') }}"></script>

<!-- Page Specific JS File -->
</body>
</html>
